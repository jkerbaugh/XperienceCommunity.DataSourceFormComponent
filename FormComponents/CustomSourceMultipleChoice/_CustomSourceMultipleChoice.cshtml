@using Kentico.Forms.Web.Mvc
@using Kentico.Web.Mvc
@model CustomSourceMultipleChoiceComponent

@{
    var attributes = ViewData.Kentico().GetEditorHtmlAttributes();
}

<span class="ktc-checkbox-list">
    @for (int i = 0; i < Model.HtmlOptions.Count; i++)
    {
        <span class="ktc-checkbox">
            @Html.CheckBoxFor(m => m.HtmlOptions[i].Selected, attributes)
            @Html.LabelFor(m => m.HtmlOptions[i].Selected, Model.HtmlOptions[i].Text)
            
            @Html.HiddenFor(m => m.HtmlOptions[i].Text)
            @Html.HiddenFor(m => m.HtmlOptions[i].Value)
        </span>
    }
</span>

