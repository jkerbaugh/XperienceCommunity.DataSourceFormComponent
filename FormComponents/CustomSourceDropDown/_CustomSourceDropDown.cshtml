@using Kentico.Forms.Web.Mvc
@using Kentico.Web.Mvc
@model XperienceCommunity.DataSourceFormComponents.CustomSourceDropDownComponent

@{
    var attributes = ViewData.Kentico().GetEditorHtmlAttributes();

    if (Model.Properties.AllowMultiple)
        attributes["multiple"] = null;
}

@Html.DropDownListFor(_ => _.SelectedValue, Model.HtmlOptions.ToSelectListItems(), Model.Properties.OptionLabel, attributes)